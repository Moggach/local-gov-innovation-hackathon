{
  "name": "local-gov-innovation-hackathon",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y pandoc && npm install",
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "npm.packageManager": "npm"
      }
    }
  }
}
